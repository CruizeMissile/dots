# bindsym $mod+Shift+space        floating toggle # toggle tiling / floating

bindsym $mod+Escape             workspace prev
bindsym $mod+Shift+Escape       exec $HOME/.scripts/prompt "Are you sure you want to exit i3?" "i3-msg exit"

