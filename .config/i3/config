bindsym $mod+r                  exec $term -e ranger
bindsym $mod+Shift+r            restart

bindsym $mod+t                  split toggle
bindsym $mod+Shift+t            gaps inner current set $default_gaps ; gaps outer current set $default_gaps

# bindsym $mod+y                  something
bindsym $mod+Shift+y            resize shrink width 5 px or 5 ppt

bindsym $mod+u                  [title="dropdown"] scratchpad show ; [title="dropdown"] move position center
