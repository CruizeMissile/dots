#!/bin/bash

# Show the current list of files. Attached to the list of files show the
# lastest commit hash, subject etc. A view like a remote hosting site

# Color escape characters
COL_BLK="\\e[1;30m"
COL_RED="\\e[1;31m"
COL_GRN="\\e[1;32m"
COL_YLW="\\e[1;33m"
COL_BLU="\\e[1;34m"
COL_MAG="\\e[1;35m"
COL_CYN="\\e[1;36m"
COL_WHT="\\e[1;37m"
COL_RST="\\e[1;0m"

# Default colors for output objects
PRT_FILE=$COL_BLU
PRT_TIME=$COL_CYN
PRT_DESC=$COL_GRN
PRT_AUTH=$COL_YLW
PRT_BRAK=$COL_WHT

CURRENT_DIRECTORY_FILES=$(git ls-files | grep -vF '/')
for file in $CURRENT_DIRECTORY_FILES; do
    IFS='
'
    log_msg=( $(git log -n 1 HEAD --format="$file%n%cr%n%s%n[%aN]%n" -- "$file") )
    unset IFS

    printf "%b%-30.30s%b %b%-21s %s %s%b\\n" "$PRT_FILE" "${log_msg[0]}"  "$COL_RST" "$PRT_TIME" "${log_msg[1]}" "${log_msg[2]}" "${log_msg[3]}" "$COL_RST"
done

