# Global properties
#
# The top properties below are applied to every block, but can be overridden
# Each block command default to the script name to avoid biolerplate

command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[updates]
command=$HOME/.config/i3blocks/blocks/update
markup=pango
interval= 3600

[mediaplayer]
command=$HOME/.config/i3blocks/blocks/mediaplayer
interval=5
signal=20

[backlight]
command=$HOME/.config/i3blocks/blocks/backlight
label=bright
interval=once
signal=5

[volume]
command=$HOME/.config/i3blocks/blocks/volume
interval=once
signal=10
label=vol:

[cpu_usage]
command=$HOME/.config/i3blocks/blocks/cpu
label=cpu:
interval=5

[memory]
command=$HOME/.config/i3blocks/blocks/memory
label=mem
interval=5

[wifi]
command=$HOME/.config/i3blocks/blocks/wifi
label=wifi:
interval=10

[battery]
command=$HOME/.config/i3blocks/blocks/battery
markup=pango
interval=30

[time]
command=$HOME/.config/i3blocks/blocks/clock
interval=1
